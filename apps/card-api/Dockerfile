#
# Build the docker image with `npx nx docker-build card-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t card-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system card-api && \
          adduser --system -G card-api card-api

COPY dist/apps/card-api card-api
RUN chown -R card-api:card-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix card-api --omit=dev -f install

CMD [ "node", "card-api" ]
